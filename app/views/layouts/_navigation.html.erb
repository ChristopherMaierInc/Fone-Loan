      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to root_path do %>
      <%= image_tag 'logo5.png', class: 'navbar-brand', alt: 'LoanFone logo' %>
